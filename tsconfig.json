{
  "compilerOptions": {
    "rootDirs": ["src"],
    "outDir": "dist",
    "lib": ["esnext"],
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "allowJs": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"],
      "test/*": ["tests/*"]
    },
    "isolatedModules": false,
    "noEmit": true,
    "resolveJsonModule": true
  },
  "include": ["src", "environment.d.ts", "locales"],
  "exclude": ["node_modules"]
}
